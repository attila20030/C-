//1.Feladat
using System.Drawing;

Console.WriteLine("Kérem adja meg a foglalt helyek számát: ");
int foglalt = Convert.ToInt32(Console.ReadLine());

Console.WriteLine("Kérem adja meg az összes hely számát: ");
int osszes = Convert.ToInt32(Console.ReadLine());

if(foglalt > osszes)
{
    Console.WriteLine("Helytelen értékmegadás.");
}
Console.ReadLine();

//2.Feladat
Console.WriteLine("Kérem az intervallum kezdőértékét: ");
int kezdo = Convert.ToInt32(Console.ReadLine());

Console.WriteLine("Kérem adja meg az intervallum végértékét: ");
int vegertek = Convert.ToInt32(Console.ReadLine());

if(kezdo> vegertek)
{
    Console.WriteLine("Az intervallum hibásan van megadva");
}
Console.ReadLine();

//3.Feladat
Console.WriteLine("Elsőfokú egyenlet megoldása");
Console.WriteLine("Megoldom az a*x+b=0 egyenletet!");

Console.WriteLine("Kérem adja meg az a értékét: ");
int a = Convert.ToInt32(Console.ReadLine());

Console.WriteLine("Kérem adja meg a b értékét: ");
int b = Convert.ToInt32(Console.ReadLine());

int x;


if(a == 0)
{
    Console.WriteLine("Nincs megoldása az egyenletnek");
}
else
{
    x = -b / a;
    Console.WriteLine("Az egyenlet megoldása:", x);
}

//4.Feladat
Console.WriteLine("Kérem adja meg az A oldalt: ");
int aoldal = Convert.ToInt32(Console.ReadLine());

Console.WriteLine("Kérem adja meg a B oldalt: ");
int boldal = Convert.ToInt32(Console.ReadLine());

Console.WriteLine("Kérem adja meg a C oldalt: ");
int coldal = Convert.ToInt32(Console.ReadLine());

if(aoldal + boldal <= coldal)
{
    Console.WriteLine("A háromszög ");
}
else if (boldal + coldal <= aoldal)
{
    Console.WriteLine("A háromszög ");
}
else if (aoldal + coldal <= boldal)
{
    Console.WriteLine("A háromszög ");
}

else if (aoldal + boldal >= coldal)
{
    Console.WriteLine("A háromszög szerkezthető!");
}
else if (boldal + coldal >= aoldal)
{
    Console.WriteLine("A háromszög szerkezthető!");
}
else if (aoldal + coldal >= boldal)
{
    Console.WriteLine("A háromszög szerkezthető!");
}
Console.ReadLine();

//5.Feladat
Console.WriteLine("Add meg a kör x koordinátáját: : ");
double xertek = Convert.ToDouble(Console.ReadLine());

Console.WriteLine("Add meg a kör y koordinátáját: ");
double yertek = Convert.ToDouble(Console.ReadLine());

Console.WriteLine("Add meg a kör sugarát(r): ");
double rertek = Convert.ToDouble(Console.ReadLine());

Console.WriteLine("Add meg a pont A koordinátáját: ");
double pontA = Convert.ToDouble(Console.ReadLine());

Console.WriteLine("Add meg a pont B koordinátáját: ");
double pontB = Convert.ToDouble(Console.ReadLine());


double tav = Math.Pow(xertek - pontA, 2) + Math.Pow(yertek - pontB, 2);
double sugarnegy = Math.Pow(rertek, 2);

if(tav <= sugarnegy)
{
    Console.WriteLine("A pont a körlemezen van.");
}
else
{
    Console.WriteLine("A pont nincs a körlemezen ");
}


//6.Feladat--



//7.Feladat
Console.WriteLine("Kérem adja meg a víz hőmérségletét: ");
int fok = Convert.ToInt32(Console.ReadLine());

if(fok > 100)
{
    Console.WriteLine("Pára");
}
else if(fok == 0)
{
    Console.WriteLine("Hideg");
}
else if(fok < 0)
{
    Console.WriteLine("Fagyott víz");
}

//8.Feladat --

//9.
Console.WriteLine("Kérem adja meg a tanulmányi átlagát: ");
double atlag = Convert.ToDouble(Console.ReadLine());

if(atlag == 5)
{
    Console.WriteLine("Kitűnő!");
}
else if (atlag <= 4.99 || atlag >= 4.5)
{
    Console.WriteLine("Jeles!");
}
else if(atlag <= 4.49 || atlag >= 3.5)
{
    Console.WriteLine("Közepes!");
}
else if(atlag <= 3.49 || atlag >= 2.5)
{
    Console.WriteLine("Elégséges!");
}
else
{
    Console.WriteLine("Elégtelen!");
}
Console.ReadLine();
